<h1>Listing users</h1>


<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
	<td><%= user.email%></td>
    <td><%= link_to 'Show', user %></td>
		<% if current_user.id == user.id || current_user.username == "root" %>
    <td><%= link_to 'Edit Account', edit_user_path(user) %></td>
    <td><%= link_to 'Delete Account', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
  </tr>
<% end %>
</table>

